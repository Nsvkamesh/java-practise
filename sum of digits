import java.util.*;

public class Main {
    public static void main(String[] args) {
        int n;
        int temp = 0;
        Scanner sc = new Scanner(System.in);
        n = sc.nextInt();
        while (n > 0) {
            int d = n % 10;
            temp = temp + d;
            n = n / 10;
        }
        System.out.println(temp);
    }
}
